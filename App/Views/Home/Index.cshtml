@{
    ViewData["Title"] = "Home Page";
}

<form asp-controller="LeiturasDoRelogio" asp-action="Registrar">
    <partial name="_FormLeitura.cshtml" />
</form>
<div class="card card-body ">
    <h4 class="text-center">Última leitura: @Model.Registro.Date.ToString("dd/MM/yyyy") às @Model.Registro.ToString("HH:mm")</h4>
    <h4 class="text-center">Próxima leitura: @Model.Registro.AddDays(1).ToString("dd/MM/yyyy") às @Model.Registro.ToString("HH:mm")</h4>
    Consumo(mês): @ViewData["ConsumoMensal"] kw/h
</div>
