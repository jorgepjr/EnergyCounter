@model IEnumerable<LeituraDoRelogio>
@{
    ViewData["Title"] = "Index";
}
<div class="card-body">
    <form asp-action="Registrar">
        <partial name="_FormLeitura.cshtml" />
    </form>
    @if (Model.Any())
    {

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Data</th>
                    <th>Kw /h</th>
                    <th>Consumo</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Registro.ToString("dd/MM/yyyy")</td>
                        <td>@item.Kwh</td>
                        <td>@item.Consumo</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <div class="alert alert-primary"><h3>Nenhum cadastro existente!</h3></div>
</div>
